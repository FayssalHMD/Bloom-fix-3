<!DOCTYPE html>
<html lang="fr" class="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter un Témoignage - Bloom Admin</title>
    <link rel="icon" type="image/png" href="/images/title-icon.webp">
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/admin.css">
    <link rel="stylesheet" href="/styles/admin-form.css">
</head>
<body>
    <%- include('partials/admin-header') %>

    <main class="admin-main">
        <div class="composer-header">
            <h1>Ajouter un Nouveau Témoignage</h1>
            <a href="/admin/testimonials" class="btn-cancel">← Annuler</a>
        </div>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="admin-error-banner">
                <strong>Erreur de validation :</strong>
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/admin/testimonials/add" method="POST" enctype="multipart/form-data">
            
            <div class="composer-main">
                <!-- Left Panel: Main Info -->
                <div class="composer-panel composer-panel-main">
                    <!-- ================================================== -->
                    <!--                 START OF I18N CHANGES                -->
                    <!-- ================================================== -->
                    <div class="lang-tabs">
                        <div class="tab active" data-lang="fr">Français</div>
                        <div class="tab" data-lang="ar">العربية</div>
                    </div>

                    <!-- French Panel -->
                    <div id="panel-fr" class="lang-panel active">
                        <h2>Informations du Témoignage (FR)</h2>
                        <p class="subtitle">Racontez l'histoire d'une cliente.</p>
                        
                        <div class="form-group">
                            <label for="quote-fr">Citation de la cliente (Optionnel)</label>
                            <textarea id="quote-fr" name="quote[fr]" rows="3"><%= typeof oldInput !== 'undefined' ? oldInput.quote?.fr : '' %></textarea>
                        </div>

                        <div class="form-group">
                            <label for="story-fr">Le Récit (Optionnel)</label>
                            <textarea id="story-fr" name="story[fr]" rows="5"><%= typeof oldInput !== 'undefined' ? oldInput.story?.fr : '' %></textarea>
                        </div>
                    </div>

                    <!-- Arabic Panel -->
                    <div id="panel-ar" class="lang-panel">
                        <h2>معلومات الشهادة (AR)</h2>
                        <p class="subtitle">احكِ قصة العميلة.</p>
                        
                        <div class="form-group">
                            <label for="quote-ar">اقتباس العميلة (اختياري)</label>
                            <textarea id="quote-ar" name="quote[ar]" rows="3" dir="rtl"><%= typeof oldInput !== 'undefined' ? oldInput.quote?.ar : '' %></textarea>
                        </div>

                        <div class="form-group">
                            <label for="story-ar">القصة (اختياري)</label>
                            <textarea id="story-ar" name="story[ar]" rows="5" dir="rtl"><%= typeof oldInput !== 'undefined' ? oldInput.story?.ar : '' %></textarea>
                        </div>
                    </div>
                    <!-- ================================================== -->
                    <!--                  END OF I18N CHANGES                 -->
                    <!-- ================================================== -->
                    <hr class="form-divider">
                    <h2>Détails Techniques</h2>
                    <div class="form-group">
                        <label for="type">Type de Témoignage</label>
                        <select id="testimonial-type-select" name="type" required>
                            <option value="instagram" <%= (typeof oldInput !== 'undefined' && oldInput.type === 'instagram') ? 'selected' : '' %>>Instagram</option>
                            <option value="before-after" <%= (typeof oldInput !== 'undefined' && oldInput.type === 'before-after') ? 'selected' : '' %>>Before/After</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="featuredProducts">Produits Associés (Optionnel)</label>
                        <select id="featuredProducts" name="featuredProducts" multiple>
                            <% products.forEach(product => { %>
                                <!-- FIX: Access French name for display -->
                                <option value="<%= product._id %>"><%= product.name.fr %></option>
                            <% }) %>
                        </select>
                        <small>Maintenez Ctrl (ou Cmd sur Mac) pour en sélectionner plusieurs.</small>
                    </div>
                </div>

                <!-- Right Panel: Media -->
                <div class="composer-panel composer-panel-side">
                    <!-- This container will be shown/hidden by JS -->
                    <div id="instagram-fields">
                        <div class="form-group">
                            <label for="instagramImage">Image Instagram (Requise)</label>
                            <label for="instagramImage" class="image-upload-zone">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
                                <p>Glissez-déposez ou cliquez</p>
                                <span>PNG, JPG, WEBP</span>
                            </label>
                            <input type="file" id="instagramImage" name="instagramImage" accept="image/*" style="display: none;">
                            <div id="instagram-image-preview" class="image-previews"></div>
                        </div>
                    </div>

                    <!-- This container will be shown/hidden by JS -->
                    <div id="before-after-fields" style="display: none;">
                        <div class="form-group">
                            <label for="beforeImage">Image "Avant" (Requise)</label>
                            <label for="beforeImage" class="image-upload-zone">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
                                <p>Glissez-déposez ou cliquez</p>
                            </label>
                            <input type="file" id="beforeImage" name="beforeImage" accept="image/*" style="display: none;">
                            <div id="before-image-preview" class="image-previews"></div>
                        </div>
                        <div class="form-group">
                            <label for="afterImage">Image "Après" (Requise)</label>
                            <label for="afterImage" class="image-upload-zone">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" y1="3" x2="12" y2="15"></line></svg>
                                <p>Glissez-déposez ou cliquez</p>
                            </label>
                            <input type="file" id="afterImage" name="afterImage" accept="image/*" style="display: none;">
                            <div id="after-image-preview" class="image-previews"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="composer-actions">
                <a href="/admin/testimonials" class="btn-cancel">Annuler</a>
                <button type="submit" class="admin-btn admin-btn-primary btn-submit">Enregistrer le Témoignage</button>
            </div>
        </form>
    </main>

    <%- include('partials/footer') %>
    

    <!-- NEW SCRIPT FOR DYNAMIC FORM LOGIC -->
    <script nonce="<%= locals.nonce %>">
        document.addEventListener('DOMContentLoaded', () => {
            const typeSelect = document.getElementById('testimonial-type-select');
            const instagramFields = document.getElementById('instagram-fields');
            const beforeAfterFields = document.getElementById('before-after-fields');

            function toggleFields() {
                if (typeSelect.value === 'before-after') {
                    instagramFields.style.display = 'none';
                    beforeAfterFields.style.display = 'block';
                } else {
                    instagramFields.style.display = 'block';
                    beforeAfterFields.style.display = 'none';
                }
            }

            // Initial check on page load
            toggleFields();

            // Add event listener for changes
            typeSelect.addEventListener('change', toggleFields);
        });
    </script>


    <script nonce="<%= nonce %>" src="/functions/admin-form.js"></script>
    <script nonce="<%= nonce %>" src="/functions/admin.js"></script>
</body>
</html>