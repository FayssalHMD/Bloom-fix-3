<!DOCTYPE html>
<html lang="<%= lng %>" dir="<%= lng === 'ar' ? 'rtl' : 'ltr' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('auth.forgotPasswordTitle') %> - Bloom</title>

    <!-- ================================================== -->
    <!--     START: ADD AMIRI & CAIRO FOR ARABIC FONTS    -->
    <!-- ================================================== -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@700&family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <!-- ================================================== -->
    <!--      END: ADD AMIRI & CAIRO FOR ARABIC FONTS     -->
    <!-- ================================================== -->

    
    <link rel="icon" type="image/png" href="/images/title-icon.png">
    <link rel="stylesheet" href="/styles/style.css">
    
</head>
<body class="no-scroll">

     <%- include('partials/header', { t: t, lng: lng, pageType: pageType, currentUrl: currentUrl, user: user }) %>

      <main class="auth-page">
        <div class="auth-container">
            <h1 class="auth-title"><%= t('auth.forgotPasswordTitle') %></h1>
            <p class="auth-subtitle"><%= t('auth.forgotPasswordSubtitle') %></p>

            <% messages.success?.forEach(message => { %>
                <div class="auth-success"><p><%= message %></p></div>
            <% }) %>
            <% messages.error?.forEach(message => { %>
                <div class="auth-errors"><p><%= message %></p></div>
            <% }) %>

            <form action="/forgot-password" method="POST" class="auth-form">
                
                <div class="form-group">
                    <label for="email"><%= t('forms.emailAddress') %></label>
                    <input type="email" id="email" name="email" required>
                </div>
                 <button type="submit" class="btn-auth"><%= t('buttons.sendLink') %></button>
            </form>

            <div class="auth-switch">
                <p><%= t('auth.rememberPassword') %> <a href="/login"><%= t('auth.loginLink') %></a></p>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>


</body>
</html>