<!DOCTYPE html>
<html lang="fr" class="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier le Témoignage - Bloom Admin</title>
    <link rel="icon" type="image/png" href="/images/title-icon.webp">
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/admin.css">
    <link rel="stylesheet" href="/styles/admin-form.css">
</head>
<body>
    <%- include('partials/admin-header') %>

     <main class="admin-main">
        <div class="composer-header">
            <h1>Modifier le Témoignage</h1>
            <a href="/admin/testimonials" class="btn-cancel">← Annuler</a>
        </div>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="admin-error-banner">
                <strong>Erreur de validation :</strong>
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/admin/testimonials/edit/<%= testimonial._id %>" method="POST" enctype="multipart/form-data">
           
            <div class="composer-main">
                <!-- Left Panel: Main Info -->
                <div class="composer-panel composer-panel-main">
                    <!-- ================================================== -->
                    <!--                 START OF I18N CHANGES                -->
                    <!-- ================================================== -->
                    <div class="lang-tabs">
                        <div class="tab active" data-lang="fr">Français</div>
                        <div class="tab" data-lang="ar">العربية</div>
                    </div>

                    <!-- French Panel -->
                    <div id="panel-fr" class="lang-panel active">
                        <h2>Informations du Témoignage (FR)</h2>
                        <p class="subtitle">Mettez à jour l'histoire de la cliente.</p>
                        
                        <div class="form-group">
                            <label for="quote-fr">Citation de la cliente (Optionnel)</label>
                            <textarea id="quote-fr" name="quote[fr]" rows="3"><%= oldInput.quote?.fr || '' %></textarea>
                        </div>

                        <div class="form-group">
                            <label for="story-fr">Le Récit (Optionnel)</label>
                            <textarea id="story-fr" name="story[fr]" rows="5"><%= oldInput.story?.fr || '' %></textarea>
                        </div>
                    </div>

                    <!-- Arabic Panel -->
                    <div id="panel-ar" class="lang-panel">
                        <h2>معلومات الشهادة (AR)</h2>
                        <p class="subtitle">تحديث قصة العميلة.</p>
                        
                        <div class="form-group">
                            <label for="quote-ar">اقتباس العميلة (اختياري)</label>
                            <textarea id="quote-ar" name="quote[ar]" rows="3" dir="rtl"><%= oldInput.quote?.ar || '' %></textarea>
                        </div>

                        <div class="form-group">
                            <label for="story-ar">القصة (اختياري)</label>
                            <textarea id="story-ar" name="story[ar]" rows="5" dir="rtl"><%= oldInput.story?.ar || '' %></textarea>
                        </div>
                    </div>
                    <!-- ================================================== -->
                    <!--                  END OF I18N CHANGES                 -->
                    <!-- ================================================== -->
                    <hr class="form-divider">
                    <h2>Détails Techniques</h2>
                    <div class="form-group">
                        <label for="type">Type de Témoignage</label>
                        <select id="testimonial-type-select" name="type" required>
                            <option value="instagram" <%= oldInput.type === 'instagram' ? 'selected' : '' %>>Instagram</option>
                            <option value="before-after" <%= oldInput.type === 'before-after' ? 'selected' : '' %>>Before/After</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="featuredProducts">Produits Associés (Optionnel)</label>
                        <select id="featuredProducts" name="featuredProducts" multiple>
                            <% products.forEach(product => { %>
                                <option value="<%= product._id %>" 
                                    <%= (oldInput.featuredProducts && oldInput.featuredProducts.map(String).includes(String(product._id))) ? 'selected' : '' %>>
                                    <!-- FIX: Access French name for display -->
                                    <%= product.name.fr %>
                                </option>
                            <% }) %>
                        </select>
                        <small>Maintenez Ctrl (ou Cmd sur Mac) pour en sélectionner plusieurs.</small>
                    </div>
                </div>

                <!-- Right Panel: Media -->
                <div class="composer-panel composer-panel-side">
                    <!-- ... (Media fields remain unchanged) ... -->
                </div>
            </div>

            <div class="composer-actions">
                <a href="/admin/testimonials" class="btn-cancel">Annuler</a>
                <button type="submit" class="admin-btn admin-btn-primary btn-submit">Mettre à jour</button>
            </div>
        </form>
    </main>

    <%- include('partials/footer') %>

    <script nonce="<%= locals.nonce %>">
        document.addEventListener('DOMContentLoaded', () => {
            const typeSelect = document.getElementById('testimonial-type-select');
            const instagramFields = document.getElementById('instagram-fields');
            const beforeAfterFields = document.getElementById('before-after-fields');

            function toggleFields() {
                if (typeSelect.value === 'before-after') {
                    instagramFields.style.display = 'none';
                    beforeAfterFields.style.display = 'block';
                } else {
                    instagramFields.style.display = 'block';
                    beforeAfterFields.style.display = 'none';
                }
            }
            toggleFields();
            typeSelect.addEventListener('change', toggleFields);
        });
    </script>

        <script nonce="<%= nonce %>" src="/functions/admin-form.js"></script>
    <script nonce="<%= nonce %>" src="/functions/admin.js"></script>
</body>
</html>