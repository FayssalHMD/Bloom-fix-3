<!DOCTYPE html>
<html lang="<%= lng %>" dir="<%= lng === 'ar' ? 'rtl' : 'ltr' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('auth.registerTitle') %> - Bloom</title>

    <!-- ================================================== -->
    <!--     START: ADD AMIRI & CAIRO FOR ARABIC FONTS    -->
    <!-- ================================================== -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@700&family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <!-- ================================================== -->
    <!--      END: ADD AMIRI & CAIRO FOR ARABIC FONTS     -->
    <!-- ================================================== -->

    
    <link rel="icon" type="image/png" href="/images/title-icon.png">
    <link rel="stylesheet" href="/styles/style.css">
    
</head>
<body class="no-scroll">

     <%- include('partials/header', { t: t, lng: lng, pageType: pageType, currentUrl: currentUrl, user: user }) %>

    <main class="auth-page">
        <div class="auth-container register-container">
            <h1 class="auth-title"><%= t('auth.registerTitle') %></h1>
            <p class="auth-subtitle"><%= t('auth.registerSubtitle') %></p>

            <% const allErrors = [];
               if (typeof errors !== 'undefined' && errors.length > 0) { errors.forEach(err => allErrors.push(err.msg)); }
               if (messages.error && messages.error.length > 0) { messages.error.forEach(msg => allErrors.push(msg)); } %>
            <% if (allErrors.length > 0) { %>
                <div class="auth-errors">
                    <ul><% allErrors.forEach(errorMsg => { %><li><%= errorMsg %></li><% }) %></ul>
                </div>
            <% } %>
            <!-- MODIFICATION END -->

            <form action="/register" method="POST" class="auth-form">
                
                <div class="form-grid">
                    <div class="form-group">
                        <label for="name"><%= t('forms.fullName') %></label>
                        <input type="text" id="name" name="name" required value="<%= typeof oldInput !== 'undefined' ? oldInput.name : '' %>">
                    </div>
                    <div class="form-group">
                         <label for="email"><%= t('forms.emailAddress') %></label>
                        <input type="email" id="email" name="email" required value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="password"><%= t('forms.password') %></label>
                        <div class="password-wrapper">
                            <input type="password" id="password" name="password" required>
                            <button type="button" class="password-toggle-btn" aria-label="Afficher le mot de passe">
                                <span class="icon-eye-open">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                                </span>
                                <span class="icon-eye-closed">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.243 4.243L6.228 6.228" /></svg>
                                </span>
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                         <label for="confirmPassword"><%= t('forms.confirmPassword') %></label>
                        <div class="password-wrapper">
                            <input type="password" id="confirmPassword" name="confirmPassword" required>
                            <button type="button" class="password-toggle-btn" aria-label="Afficher le mot de passe">
                                <span class="icon-eye-open">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                                </span>
                                <span class="icon-eye-closed">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.243 4.243L6.228 6.228" /></svg>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                 <button type="submit" class="btn-auth"><%= t('nav.register') %></button>
            </form>

             <div class="auth-switch">
                <p><%= t('auth.alreadyHaveAccount') %> <a href="/login"><%= t('auth.loginLink') %></a></p>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>


</body>
</html>