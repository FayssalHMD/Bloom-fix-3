<tr>
    <td data-label="Image">
    <% 
        let imageUrl = '/images/placeholder.png';
        if (testimonial.type === 'before-after' && testimonial.beforeImage) {
            imageUrl = (testimonial.beforeImage.url) ? testimonial.beforeImage.url : testimonial.beforeImage;
        } else if (testimonial.type === 'instagram' && testimonial.instagramImage) {
            imageUrl = (testimonial.instagramImage.url) ? testimonial.instagramImage.url : testimonial.instagramImage;
        }
    %>
    <img src="<%= imageUrl %>" alt="<%= testimonial.type %>" class="list-img">
</td>
    <td data-label="Type">
        <span class="admin-type-tag <%= testimonial.type === 'before-after' ? 'type-before-after' : 'type-instagram' %>">
            <%= testimonial.type === 'before-after' ? 'Before/After' : 'Instagram' %>
        </span>
    </td>
    <td data-label="Contenu">
        <!-- ================= START OF I18N FIX ================ -->
        <% if (testimonial.quote && testimonial.quote.fr) { %>
            <p class="testimonial-quote" style="font-weight: 700; font-style: italic; margin-bottom: 5px;">"<%= testimonial.quote.fr %>"</p>
        <% } %>
        <% if (testimonial.story && testimonial.story.fr) { %>
            <p class="testimonial-story" style="font-size: 0.9rem; opacity: 0.8;"><%= testimonial.story.fr %></p>
        <% } %>
        <!-- ================= END OF I18N FIX ================== -->
    </td>
    <td data-label="Produits Associés">
        <!-- ================= START OF I18N FIX ================ -->
        <% if (testimonial.featuredProducts && testimonial.featuredProducts.length > 0) { %>
            <%= testimonial.featuredProducts.map(p => p.name.fr).join(', ') %>
        <% } else { %>
            <span>N/A</span>
        <% } %>
        <!-- ================= END OF I18N FIX ================== -->
    </td>
    <td data-label="Actions">
        <div class="admin-list-actions">
            <a href="/admin/testimonials/edit/<%= testimonial._id %>" class="admin-btn-list-action admin-btn-list-edit">Modifier</a>
            <form action="/admin/testimonials/delete/<%= testimonial._id %>" method="POST">
                <button type="button" class="admin-btn-list-action admin-btn-list-delete btn-delete" data-item-name="ce témoignage">Supprimer</button>
            </form>
        </div>
    </td>
</tr>